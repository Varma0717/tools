# Super SEO Toolkit - Environment Configuration Template
# 
# This is a template file for environment variables.
# Copy this file to .env and replace all placeholder values with your actual configuration.
# 
# IMPORTANT: Never commit .env files with real API keys to version control!
# The .env file should be added to .gitignore for security.

# Security Settings
SECRET_KEY=your-secret-key-here-generate-a-secure-random-string
SECURITY_PASSWORD_SALT=your-password-salt-change-this

# Database Configuration
DATABASE_URL=mysql+pymysql://username:password@localhost:3306/database_name

# Example configurations (uncomment and modify one):
# DATABASE_URL=mysql+pymysql://root:@localhost/superseotoolkit
# DATABASE_URL=mysql+pymysql://devsites:password@localhost:3306/admin_devsites

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id-here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
GOOGLE_REDIRECT_URI=https://yourdomain.com/login/google/authorized

# AI API Keys
OPENROUTER_API_KEYS=your-openrouter-api-key-1,your-openrouter-api-key-2,your-openrouter-api-key-3
OPENAI_API_KEY=your-openai-api-key-here

# Email Configuration
MAIL_SERVER=your-domain.com
MAIL_PORT=465
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=contact@yourdomain.com
MAIL_PASSWORD=your-email-password-here
MAIL_DEFAULT_SENDER=admin@yourdomain.com

# Site Configuration
YOUR_SITE_URL=https://yourdomain.com
YOUR_SITE_NAME=Your SEO Toolkit

# Redis Configuration (optional - will use in-memory fallback if not available)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=your_redis_password

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# TinyMCE Rich Text Editor
TINYMCE_API_KEY=your-tinymce-api-key-here

# Performance Settings
CACHE_DEFAULT_TIMEOUT=3600
DB_POOL_SIZE=10
DB_POOL_MAX_OVERFLOW=20

# Feature Flags
ENABLE_CACHING=true
ENABLE_BACKGROUND_TASKS=true
MONITORING_ENABLED=true
ENABLE_REAL_TIME_UPDATES=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIR=logs

# Security Configuration
SECURITY_RATE_LIMIT_REQUESTS=1000
SECURITY_RATE_LIMIT_WINDOW=3600
SECURITY_BLOCK_DURATION=1800
SECURITY_MAX_REQUEST_SIZE=16777216
SECURITY_ENABLE_THREAT_DETECTION=true

# Environment
FLASK_ENV=production

# SEO Tools Configuration
SERP_API_KEY=your-serp-api-key-here
SEMRUSH_API_KEY=your-semrush-api-key-here
AHREFS_API_TOKEN=your-ahrefs-api-token-here
MOZ_ACCESS_ID=your-moz-access-id-here
MOZ_SECRET_KEY=your-moz-secret-key-here
SCREAMING_FROG_LICENSE=your-screaming-frog-license-here

# Social Media APIs
TWITTER_API_KEY=your-twitter-api-key-here
TWITTER_API_SECRET=your-twitter-api-secret-here
FACEBOOK_APP_ID=your-facebook-app-id-here
FACEBOOK_APP_SECRET=your-facebook-app-secret-here

# Additional Tool APIs
LIGHTHOUSE_API_KEY=your-lighthouse-api-key-here
GTMETRIX_API_KEY=your-gtmetrix-api-key-here
PINGDOM_API_KEY=your-pingdom-api-key-here
KEYWORD_TOOL_API_KEY=your-keyword-tool-api-key-here

# WebPageTest Configuration
WEBPAGETEST_API_KEY=your-webpagetest-api-key-here
WEBPAGETEST_SERVER=http://www.webpagetest.org

# reCAPTCHA Configuration
RECAPTCHA_SITE_KEY=your-recaptcha-site-key-here
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key-here

# Backup and Storage
AWS_ACCESS_KEY_ID=your-aws-access-key-here
AWS_SECRET_ACCESS_KEY=your-aws-secret-key-here
AWS_BUCKET_NAME=your-s3-bucket-name-here
AWS_REGION=us-east-1

# Analytics
GOOGLE_ANALYTICS_ID=your-google-analytics-id-here
GOOGLE_SEARCH_CONSOLE_JSON=your-google-search-console-json-path-here

# Google AdSense Configuration
GOOGLE_ADSENSE_CLIENT_ID=your-adsense-client-id-here
GOOGLE_ADSENSE_APPROVED=false
ADSENSE_SIDEBAR_SLOT=your-sidebar-ad-slot-here
ADSENSE_BOTTOM_SLOT=your-bottom-ad-slot-here

# Advanced Features
ENABLE_AI_CONTENT_GENERATION=true
ENABLE_BULK_OPERATIONS=true
ENABLE_SCHEDULED_REPORTS=true
ENABLE_WHITE_LABEL=false
ENABLE_MULTI_LANGUAGE=true
