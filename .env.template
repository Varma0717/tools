# Super SEO Toolkit - Enhanced Infrastructure Configuration

# Database Configuration
DATABASE_URL=sqlite:///site.db
# DATABASE_URL=mysql://username:password@localhost/seo_toolkit

# Redis Configuration (optional - will use in-memory fallback if not available)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=your_redis_password

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Security Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
SECURITY_PASSWORD_SALT=your-password-salt-change-this

# API Keys (optional - for SEO tools)
OPENROUTER_API_KEYS=your-openrouter-api-key-here
OPENAI_API_KEY=your-openai-api-key-here

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Performance Settings
CACHE_DEFAULT_TIMEOUT=3600
DB_POOL_SIZE=10
DB_POOL_MAX_OVERFLOW=20

# Feature Flags
ENABLE_CACHING=true
ENABLE_BACKGROUND_TASKS=true
MONITORING_ENABLED=true
ENABLE_REAL_TIME_UPDATES=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIR=logs

# Security Configuration
SECURITY_RATE_LIMIT_REQUESTS=1000
SECURITY_RATE_LIMIT_WINDOW=3600
SECURITY_BLOCK_DURATION=1800
SECURITY_MAX_REQUEST_SIZE=16777216
SECURITY_ENABLE_THREAT_DETECTION=true

# Environment
FLASK_ENV=development
# FLASK_ENV=production
