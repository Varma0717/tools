# =============================================================================
# SUPER SEO TOOLKIT - Environment Configuration
# =============================================================================
# Copy this file to .env and update the values for your environment
# NEVER commit the actual .env file to version control!

# =============================================================================
# FLASK APPLICATION SETTINGS
# =============================================================================
# Generate a secure secret key for your application
# You can generate one using: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-super-secret-key-here-change-this-in-production

# Flask environment (development, production, testing)
FLASK_ENV=development

# OAuth2 Development Setting (allows HTTP - set to 1 for development only)
OAUTHLIB_INSECURE_TRANSPORT=1

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MySQL Database Connection (Recommended for production)
# Format: mysql+pymysql://username:password@host:port/database_name
DATABASE_URL=mysql+pymysql://root:@localhost/super_seo_toolkit

# Alternative: Individual database components (used if DATABASE_URL not set)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=super_seo_toolkit
DB_USER=root
DB_PASSWORD=your_mysql_password

# Development Database (SQLite) - Used if no DATABASE_URL is set
DEV_DATABASE_URL=sqlite:///instance/site.db

# =============================================================================
# GOOGLE OAUTH AUTHENTICATION
# =============================================================================
# Get these from Google Cloud Console: https://console.cloud.google.com/
# Create OAuth 2.0 Client ID credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://127.0.0.1:5002/login/google/authorized

# =============================================================================
# AI TOOLS & API CONFIGURATION
# =============================================================================
# OpenRouter API Keys (comma-separated for load balancing)
# Get from: https://openrouter.ai/
OPENROUTER_API_KEYS=sk-or-v1-your-first-api-key,sk-or-v1-your-second-api-key,sk-or-v1-your-third-api-key

# Alternative single API key format
OPENROUTER_API_KEY=sk-or-v1-your-single-api-key

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP Server Settings
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@yourdomain.com

# Alternative Email Providers:
# Gmail: smtp.gmail.com:587 (TLS)
# Outlook: smtp-mail.outlook.com:587 (TLS)
# Yahoo: smtp.mail.yahoo.com:587 (TLS)
# Custom Domain: mail.yourdomain.com:587 (TLS)

# =============================================================================
# PAYMENT PROCESSING
# =============================================================================
# PayPal Configuration
# Sandbox for development, live for production
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_ENVIRONMENT=sandbox

# Stripe Configuration
# Use test keys for development (pk_test_/sk_test_), live keys for production (pk_live_/sk_live_)
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# =============================================================================
# SITE CONFIGURATION
# =============================================================================
# Your site information
YOUR_SITE_NAME=Super SEO Toolkit
YOUR_SITE_URL=http://127.0.0.1:5002/

# Production site URL (update for production)
# YOUR_SITE_URL=https://yourdomain.com/

# =============================================================================
# SECURITY & FEATURES (Optional)
# =============================================================================
# reCAPTCHA (Optional - for contact forms)
# Get from: https://www.google.com/recaptcha/admin
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# Rate Limiting (Optional)
RATELIMIT_STORAGE_URL=redis://localhost:6379
RATELIMIT_DEFAULT=100/hour

# File Upload Settings (Optional)
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads

# =============================================================================
# DEVELOPMENT & DEBUGGING (Optional)
# =============================================================================
# Set to True to enable debug mode (development only)
DEBUG=False

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# For production deployment, update these:
# 1. Change SECRET_KEY to a strong, unique value
# 2. Set FLASK_ENV=production
# 3. Set OAUTHLIB_INSECURE_TRANSPORT=0 (or remove)
# 4. Use production database credentials
# 5. Update YOUR_SITE_URL to your domain
# 6. Use live PayPal and Stripe credentials
# 7. Configure real email server
# 8. Set DEBUG=False
# 9. Use live Razorpay credentials
# =============================================================================

# =============================================================================
# RAZORPAY PAYMENT GATEWAY SETTINGS
# =============================================================================
# Get these from https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=rzp_test_your_key_id_here
RAZORPAY_KEY_SECRET=your_secret_key_here

# For production, use live keys:
# RAZORPAY_KEY_ID=rzp_live_your_live_key_here
# RAZORPAY_KEY_SECRET=your_live_secret_key_here

# Razorpay webhook secret for payment verification
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret_here

# Payment settings
PAYMENT_CURRENCY=USD
PAYMENT_TAX_RATE=0.18
