# Secret key for Flask application
SECRET_KEY=your-secret-key-here

# Database Configuration
DATABASE_URL=mysql+pymysql://username:password@localhost:3306/database_name

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5000/login/google/authorized

# API Keys (comma-separated for multiple keys)
OPENROUTER_API_KEYS=your-api-key-1,your-api-key-2

# Email Configuration
MAIL_SERVER=your-mail-server.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-email@domain.com
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=your-sender@domain.com

# Site Configuration
YOUR_SITE_URL=http://localhost:5000
YOUR_SITE_NAME=Your App Name
